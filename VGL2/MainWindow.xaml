<Window x:Class="VGL2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VGL2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        WindowStyle="None" ResizeMode="NoResize"
        AllowsTransparency="True" Background="Transparent">
    <Grid>
        <Border Background="Black" CornerRadius="30">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="120" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="30" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBlock Text="x" VerticalAlignment="Top" HorizontalAlignment="Right" MouseLeftButtonDown="TextBlock_MouseLeftButtonDown"
                           Foreground="White" Margin="0,5,30,0" FontSize="20" />
                <TextBlock Grid.Row="0" Text="voguelscc" Foreground="White" VerticalAlignment="Bottom" HorizontalAlignment="Center"
                           FontFamily="Century Gothic" FontSize="25"/>
                <TextBlock Grid.Row="1" Text="Version 32.4 for Goddess (2025)" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"
                            FontFamily="Century Gothic" FontSize="13"/>
                <Border Grid.Row="3" Width="400" Height="35" CornerRadius="17" BorderBrush="Orange" BorderThickness="1.5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="70" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="推しが私をオーバライドするコマンド, 文章の入力..." Foreground="LightGray"  VerticalAlignment="Center" Margin="13,0,0,0"/>
                        <Border Grid.Column="1" Width="60" Height="25" Background="Orange" CornerRadius="15">
                            <TextBlock Text="Run" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White" />
                        </Border>
                    </Grid>
                </Border>

                <StackPanel Grid.Row="4">
                    <TextBlock Text="Version Overview:" Foreground="White" FontFamily="Century Gothic"
                            Margin="300,30,0,0" />
                    <TextBlock Text="- 　Goddess (2025) の宣言" Foreground="White" FontFamily="Century Gothic"
                            Margin="300,10,0,0" />
                    <TextBlock Text="- 　National Goddess (2025) の終了" Foreground="White" FontFamily="Century Gothic"
                            Margin="300,10,0,0" />
                    <TextBlock Text="- 　Project Mitsuki の凍結" Foreground="White" FontFamily="Century Gothic"
                             Margin="300,10,0,0" />
                    <TextBlock Text="- 　Data Version 32.4" Foreground="White" FontFamily="Century Gothic"
                             Margin="300,10,0,0" />
                </StackPanel>
                
            </Grid>
        </Border>
    </Grid>
</Window>
